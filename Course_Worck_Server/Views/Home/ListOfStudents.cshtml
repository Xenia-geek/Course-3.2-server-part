@model IEnumerable<Course_Worck_Server.Models.ListStudent>
<div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#ef6565; border-bottom-color:white">
    <div class="container">
        <div class="navbar-collapse collapse" style=" background-color: #ef6565">
            <ul class="nav navbar-nav">
                <li style="background-color: white; font-size: 18px; font-family: MV Boli">@Html.ActionLink("List Of Students", "ListOfStudents", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:red" })</li>
                <li style="font-size: 18px; font-family: MV Boli; margin-left: 5px">@Html.ActionLink("List Of Labs", "ListOfLabs", "Home", new { area = "" }, new { @class = "link", @style = "color:white" })</li>
                <li style="font-size: 18px;font-family: MV Boli; margin-left:5px">@Html.ActionLink("List Of Teachers", "ListOfTeachers", "Home", new { area = "" }, new { @class = "link", @style = "color:white" })</li>
                <li style="font-size: 18px;font-family: MV Boli; margin-left:5px">@Html.ActionLink("List Of Teacher's Lab", "ListOfTeachersLabs", "Home", new { area = "" }, new { @class = "link", @style = "color:white" })</li>
                <li style="background-color:#F5F5F5; font-size: 18px;font-family: MV Boli; margin-left:345px">@Html.ActionLink("LogOff", "Logoff", "Home", new { area = "" }, new { @class = "link", @style = "color:red" })</li>
            </ul>
        </div>
    </div>
</div>
<div style="margin-top: 10px;margin-bottom: 10px;" class="buttonsStudent">
    <table>
        <tr>
            <td><form method="get" action="~/Home/AddStudentList"><input type="submit" value="Add Student" /></form></td>
            <td><form method="get" action="~/Home/UpdateStudentList"><input type="submit" value="Update" /><input type="hidden" id="idSelectedItem" name="idSelectedItem" value="" /></form></td>
            <td><form method="get" action="~/Home/DeleteStudentList"><input type="submit" value="Delete" /><input type="hidden" id="delSelectedItem" name="delSelectedItem" value="" /></form></td>
        </tr>
    </table>
</div>
<table>
    <tr class="titels">
        <th class="selectstudlist">Select</th>
        <th class="idstudlist">ID</th>
        <th class="namestudlist">Name</th>
        <th class="surnamestudlist">Surname</th>
        <th class="coursestudlist">Course</th>
        <th class="specialitystudlist">Speciality</th>
        <th class="groupstudlist">Group</th>
        <th class="subgroupstudlist">SubGroup</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="valuelist">
            <td class="selectstudlist">
                <input type="radio" name="a" id="@Html.DisplayFor(modelItem => item.IDStudent)" onchange="change()" />
            </td>
            <td class="idstudlist">
                @Html.DisplayFor(modelItem => item.IDStudent)
            </td>
            <td class="namestudlist">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="surnamestudlist">
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td class="coursestudlist">
                @Html.DisplayFor(modelItem => item.Group.Cource.NumberCource)
            </td>
            <td class="specialitystudlist">
                @Html.DisplayFor(modelItem => item.Group.Speciality.NameSpeciality)
            </td>
            <td class="groupstudlist">
                @Html.DisplayFor(modelItem => item.Group.NumberGroup)
            </td>
            <td class="subgroupstudlist">
                @Html.DisplayFor(modelItem => item.Group.SubGroup.IDSubGroup)
            </td>
        </tr>
    }
</table>
<script>
    function change() {
        let elem = document.getElementsByName('a')
        let update = document.getElementsByName('idSelectedItem')
        let del = document.getElementsByName('delSelectedItem')
        elem.forEach(item => {
            if (item.checked) {
                update[0].value = item.id
                del[0].value = item.id
            }
        })
    }
</script>
